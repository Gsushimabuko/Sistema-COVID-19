<body class="container">
    
    
    <%- include('menu') %>
    
    
    <div class="header1" id="bajar">
        <b>
            Generar asistencia
        </b>
    </div>
    
    <div class="header1" style="text-align: left;" id="bajar">
    <h3><%= moment(fecha).format('L') %> MES/DÍA/AÑO </h3>
    </div>
        
    <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title"><b>Asistencia alumnos</b></h3>
          <h6 class="card-subtitle mb-2 text-muted">Advertencia</h6>
          <p class="card-text">Se generará un archivo .txt con la asistencia de todos los escaneos de los alumnos del día <%= moment(fecha).format('L') %>. Se eliminarán los 4 primeros digitos del campo DNI para eliminar el '2022'. </p>
          <button class="btn btn-info" id="botonGenerar"> Generar </button>
          
        </div>
    </div>
    

    <script>
        let estaPrendido = false
       const boton = document.getElementById("botonGenerar")
       boton.onclick = () => {

            if (estaPrendido == false) {
                console.log("1")
                const divTexto = document.getElementById("textoAqui")
                textoHijo = document.createTextNode("<%=lista%>")
                divTexto.appendChild(textoHijo)
                estaPrendido = true
            }else{
                console.log("2")
                console.log("IMPRIMIENDO: ",document.getElementById("textoAqui").textContent = "")
                estaPrendido = false
            } 
        }
    </script>
    
    <div class="card text-center mt-2">
        <div class="card-body">
            <div id="textoAqui"> </div>
   
        </div>
    </div>
 
      
