<body class="container">
    <%- include('menu') %>
    <div class="header1" id="bajar">
      
           <h2><b>Gestionar Personal</b></h2>

    </div>

        
    <form method="post" action="/gestionpersonal" id="filtro">
        <script>
        const myFunction = () =>{
            console.log("Cambiando")
            const filtroForm = document.getElementById("filtro")
            filtroForm.submit()
        }
        </script>
        
        <label class="form-label">Área:</label>
        <select name="grupo" class="form-select" onchange="myFunction()" class="form-select">
            

            <option value="-1">------Mostrar Todos-----</option>

                <% salones.forEach( (i)=> { %>

                   
                    <% if(nombreSalon==i.nombre) { %>
                        
                    <option selected value="<%= i.id %>"> <%= i.nombre %> </option>
                        
                    <%  }else{ %>

                    <option value="<%= i.id %>"> <%= i.nombre %> </option>
                    
                    <% } %>

                <% }) %>
                                    
          
        </select>


    </form>

    <div class="card">
        
        <div class="card-header">
            <b>
                Personal
            </b>
        </div>

        <div class="card-body">
            <table class="table" id="myTable1">
                <thead>


                    <tr>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>


                    </tr>
                    
                </thead>
                
                
            
                <tbody>

                    <% alumnos.forEach( (i)=> { %>

                        <tr>
                            <td><%= i.dni %></td> 
                            <td><%= i.nombre %> </td> 
                            <td><%= i.apellidop %> </td> 
                            <td><%= i.apellidom %> </td> 
             
                            <td><%= i.telefono %> </td> 
                            
                            
                            
                            <td>
                                <div>
                                    <a href="/editarpersonal/<%= i.id %>">editar</a>
                                    
                                </div>

                            </td> 


                        </tr>

                
                            
                    <% }) %>
                      

                </tbody>


            </table>
            
        </div>

    </div>

    <div class="btn btn-warning btn-sm mt-2">
        <a href="/agregarpersonal/">Agregar</a>
    </div>

    <script src="/js/gestion.js"></script> 
    <%- include('footer') %>

</body>
</html>