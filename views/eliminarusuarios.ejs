  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
    <title>Eliminar usuarios</title>
</head>

    <body class="container">
    
        <%- include('menu') %>
        
        
        <div class="header1" id="bajar">
            <b>
                Elige el alumno a eliminar
            </b>
        </div>
        
        <table class="table table-fluid" id="myTable">
                
            <thead>
                
                
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Sección</th>           
                    <th>Eliminar</th>           
                           
                </tr>
                
            </thead>
            
            
            
            <tbody id="cuerpoAlta">
                

                <% listaAlumnos.forEach( (alumno)=> { %>

                        <tr>
                            <td> <%= alumno.nombre %> </td>
                            <td> <%= alumno.apellidop %> </td>
                            <td> <%= alumno.dni %> </td>
                            <td> <%= alumno.seccion %></td>
                            <td> <a class="btn-info btn-sm" onclick="(()=>{

                                    Swal.fire({
                                    title: '¿Deseas eliminar al alumno?',
                                    showDenyButton: false,
                                    showCancelButton: true,
                                    confirmButtonText: 'Sí',
                                    denyButtonText: `Don't save`,
                                    }).then((result) => {
                                    /* Read more about isConfirmed, isDenied below */
                                    if (result.isConfirmed) {
                                        console.log('SE ELIMINARÁ A: <%=alumno.dni%>')
                                        location.href = '/eliminar/<%=alumno.dni%>'     
                                    } else if (result.isDenied) {
                                    Swal.fire('Changes are not saved', '', 'info')
                                    }
                                    })

                            })()" style="cursor: pointer;">eliminar</a></td>
                            

                        </tr>
                        
                    <% }) %>
                           
                       
            </tbody>
                
                
        </table>
      
        <script>
            $(document).ready( function () {
            $('#myTable').DataTable();

        } );
            </script>


         <!-- Sweet Alert -->
         <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    </body>

    <%- include('footer') %>
    
</html>