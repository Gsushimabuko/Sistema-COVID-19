
  <div class="row mb-2">

        <div class="col-8">   
            <label class="form-label">DNI:</label>
            <div class="input-group mb-3">
              <input id="dni_texto" name ="dniBuscado" type="text" class="form-control" aria-describedby="boton_verificar" required>
              <button type="submit" class="btn btn-outline-success"  id="boton_verificar">Verificar</button>
            </div>
        </div>

        <div class="col-4 position-relative">   

              <button type="button" class="btn btn-secondary position-absolute top-50 start-50 translate-middle" data-bs-toggle="modal" data-bs-target="#exampleModalCenteredScrollable">Buscar por filtrado</button>
        </div>
  </div>



        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenteredScrollable" tabindex="-1" aria-labelledby="exampleModalCenteredScrollableTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenteredScrollableTitle">Buscador por Persona</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
              
                <div class="row">  
                  <div  class="card">
                    <div class="card-body">
                        <table class="table" id="myTable"> 
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellidos</th>
                                    <th>Elegir</th>
                                </tr>                
                            </thead>    
                            
                            <tbody id="cuerpoAlta">

                              <% personasTotal.forEach( (i)=> { %>
          
                                  <tr>   
                                      <td><%= i.nombre %> </td>

                                      <% if( i.id == "null"){ %>
                                        <td><%= i.apellidop + " " + i.apellidom %></td>
                                      <% } else { %>
                                        <td><%= i.apellidop %></td>
                                      <% } %>
                                      
                                      <td>
                                        <a href="#" onclick="buscarClick('<%= i.dni%>')" >verificar</a>
                                      </td>           
                                  </tr>
                                                 
                                  <% }) %>
                                  
                                  
                              </tbody>
                            
                        </table>
                    </div>          
                  </div> 

                </div>
              </div>
                         
              </div>
            </div>
          </div>
        </div>

  </div>